<h1>Editing Book</h1>
<% if flash.now[:alert] %>
<p><%= flash.now[:alert] %></p>
<% end %>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error', model: f.object %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>